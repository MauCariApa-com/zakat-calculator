---
export interface Props {
  title: string;
  description?: string;
  lastUpdated?: string;
}

const { title, description = "Informasi penting mengenai privasi dan ketentuan penggunaan aplikasi Kalkulator Zakat", lastUpdated } = Astro.props;
---

<!DOCTYPE html>
<html lang="id">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title}</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  </head>
  <body>
    <header class="bg-white shadow-lg sticky top-0 z-50">
      <nav class="container mx-auto px-4 py-4">
        <div class="flex justify-between items-center">
          <!-- Logo -->
          <div class="flex items-center space-x-2">
            <div class="w-10 h-10 bg-islamic-green rounded-full flex items-center justify-center">
              <span class="text-white font-bold text-xl">Z</span>
            </div>
            <span class="text-xl font-bold text-islamic-green">Kalkulator Zakat</span>
          </div>

          <!-- Desktop Menu -->
          <div class="hidden md:flex items-center space-x-6">
            <a href="/" class="text-gray-700 hover:text-islamic-green transition-colors font-medium">Home</a>
            <a href="/#kalkulator" class="text-gray-700 hover:text-islamic-green transition-colors font-medium">Kalkulator</a>
            <a href="/about" class="text-gray-700 hover:text-islamic-green transition-colors font-medium">Tentang</a>
            <a href="/contact" class="text-gray-700 hover:text-islamic-green transition-colors font-medium">Kontak</a>
            
            <!-- GitHub Icon -->
            <a href="https://github.com/username/kalkulator-zakat" 
               target="_blank" 
               rel="noopener noreferrer"
               class="text-gray-700 hover:text-islamic-green transition-colors"
               aria-label="GitHub Repository">
              <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
                <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
              </svg>
            </a>
          </div>

          <!-- Mobile Menu Button -->
          <button id="mobile-menu-button" class="md:hidden text-gray-700 hover:text-islamic-green">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
            </svg>
          </button>
        </div>

        <!-- Mobile Menu -->
        <div id="mobile-menu" class="hidden md:hidden mt-4 pb-4 border-t border-gray-200">
          <div class="flex flex-col space-y-3 pt-4">
            <a href="/" class="text-gray-700 hover:text-islamic-green transition-colors font-medium">Home</a>
            <a href="/#kalkulator" class="text-gray-700 hover:text-islamic-green transition-colors font-medium">Kalkulator</a>
            <a href="/about" class="text-gray-700 hover:text-islamic-green transition-colors font-medium">Tentang</a>
            <a href="/contact" class="text-gray-700 hover:text-islamic-green transition-colors font-medium">Kontak</a>
            <a href="https://github.com/username/kalkulator-zakat" 
               target="_blank" 
               rel="noopener noreferrer"
               class="text-gray-700 hover:text-islamic-green transition-colors flex items-center space-x-2">
              <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
              </svg>
              <span>GitHub</span>
            </a>
          </div>
        </div>
      </nav>
    </header>

    <main class="min-h-screen bg-gradient-to-b from-gray-50 to-white">
      <!-- Breadcrumb -->
      <div class="bg-white border-b border-gray-200">
        <div class="container mx-auto px-4 py-4">
          <nav class="flex items-center space-x-2 text-sm">
            <a href="/" class="text-islamic-green hover:text-islamic-green-dark transition-colors">Home</a>
            <svg class="w-4 h-4 text-gray-400" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"/>
            </svg>
            <span class="text-gray-600">{title}</span>
          </nav>
        </div>
      </div>

      <!-- Header Section -->
      <section class="py-16 bg-gradient-to-r from-islamic-green to-islamic-green-dark text-white">
        <div class="container mx-auto px-4 text-center">
          <div class="max-w-4xl mx-auto">
            <div class="w-16 h-16 bg-white bg-opacity-20 rounded-full flex items-center justify-center mx-auto mb-6 backdrop-blur-sm">
              <svg class="w-8 h-8 text-white" fill="currentColor" viewBox="0 0 24 24">
                <path d="M12 1L3 5v6c0 5.55 3.84 10.74 9 12 5.16-1.26 9-6.45 9-12V5l-9-4z"/>
              </svg>
            </div>
            <h1 class="text-4xl md:text-5xl font-bold mb-6">{title}</h1>
            <p class="text-xl text-islamic-cream max-w-3xl mx-auto leading-relaxed">
              {description}
            </p>
            {lastUpdated && (
              <div class="mt-6 inline-flex items-center bg-white bg-opacity-10 rounded-full px-4 py-2 backdrop-blur-sm">
                <svg class="w-4 h-4 text-islamic-cream mr-2" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-12a1 1 0 10-2 0v4a1 1 0 00.293.707l2.828 2.829a1 1 0 101.415-1.415L11 9.586V6z" clip-rule="evenodd"/>
                </svg>
                <span class="text-islamic-cream text-sm">Terakhir diperbarui: {lastUpdated}</span>
              </div>
            )}
          </div>
        </div>
      </section>

      <!-- Content Section -->
      <section class="py-16">
        <div class="container mx-auto px-4">
          <div class="max-w-4xl mx-auto">
            <div class="bg-white rounded-2xl shadow-lg p-8 md:p-12">
              <slot />
            </div>
          </div>
        </div>
      </section>

      <!-- Back to Home CTA -->
      <section class="py-12 bg-gradient-to-r from-islamic-cream to-white">
        <div class="container mx-auto px-4 text-center">
          <div class="max-w-2xl mx-auto">
            <h3 class="text-2xl font-bold text-islamic-green mb-4">Kembali ke Kalkulator Zakat</h3>
            <p class="text-gray-600 mb-6">
              Mulai hitung zakat Anda dengan mudah dan akurat sesuai syariat Islam
            </p>
            <a href="/" class="bg-islamic-green hover:bg-islamic-green-dark text-white font-semibold py-3 px-8 rounded-xl transition-all duration-300 transform hover:scale-105 shadow-lg">
              Mulai Hitung Zakat
            </a>
          </div>
        </div>
      </section>
    </main>

    <footer class="bg-islamic-green text-white py-8">
      <div class="container mx-auto px-4">
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
          <div>
            <h3 class="text-lg font-semibold mb-4">Kalkulator Zakat</h3>
            <p class="text-islamic-cream">
              Aplikasi yang membantu umat Muslim menghitung zakat dengan mudah dan akurat sesuai syariat Islam.
            </p>
          </div>
          <div>
            <h3 class="text-lg font-semibold mb-4">Menu</h3>
            <ul class="space-y-2">
              <li><a href="/" class="text-islamic-cream hover:text-white transition-colors">Home</a></li>
              <li><a href="/#kalkulator" class="text-islamic-cream hover:text-white transition-colors">Kalkulator</a></li>
              <li><a href="/about" class="text-islamic-cream hover:text-white transition-colors">Tentang</a></li>
              <li><a href="/contact" class="text-islamic-cream hover:text-white transition-colors">Kontak</a></li>
            </ul>
          </div>
          <div>
            <h3 class="text-lg font-semibold mb-4">Legal</h3>
            <ul class="space-y-2">
              <li><a href="/privacy-policy" class="text-islamic-cream hover:text-white transition-colors">Kebijakan Privasi</a></li>
              <li><a href="/terms-of-service" class="text-islamic-cream hover:text-white transition-colors">Syarat & Ketentuan</a></li>
            </ul>
            <div class="mt-4">
              <a href="https://github.com/username/kalkulator-zakat" 
                 target="_blank" 
                 rel="noopener noreferrer"
                 class="text-islamic-cream hover:text-white transition-colors">
                <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
                </svg>
              </a>
            </div>
          </div>
        </div>
        <div class="border-t border-islamic-green-light mt-8 pt-8 text-center">
          <p class="text-islamic-cream">
            &copy; 2024 Kalkulator Zakat. Semua hak dilindungi. Dibuat dengan ❤️ untuk umat Muslim.
          </p>
        </div>
      </div>
    </footer>

    <script>
      // Mobile menu toggle
      const mobileMenuButton = document.getElementById('mobile-menu-button');
      const mobileMenu = document.getElementById('mobile-menu');

      mobileMenuButton?.addEventListener('click', () => {
        mobileMenu?.classList.toggle('hidden');
      });

      // Close mobile menu when clicking outside
      document.addEventListener('click', (e) => {
        if (!mobileMenuButton?.contains(e.target as Node) && !mobileMenu?.contains(e.target as Node)) {
          mobileMenu?.classList.add('hidden');
        }
      });
    </script>
  </body>
</html>